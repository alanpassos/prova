<!-- include header -->
<%- include("include/_header") %>
<!-- /include header -->
<div class="box-nave d-flex-justify-between">
    <a href="/" class="btn btn-outline-primary btn-sm">
        <span class="text-gradient">List Offer</span>
    </a>
</div>

<form action="/api/offers" method="POST" id="add_offer" enctype="application/x-www-form-urlencoded">

    <div class="mb-3">
      <label for="advertiser_name" class="form-label">Advertiser Name</label>
      <input type="text" class="form-control" id="advertiser_name"  name="advertiser_name"  >
    </div>
    <div class="mb-3">
      <label for="url" class="form-label">URL</label>
      <input type="text" class="form-control" id="url"  name="url" >
    </div>
    <div class="mb-3">
      <label for="description">Description</label>
      <textarea class="form-control" placeholder="Description" id="description"  name="description" 
        style="height: 100px"></textarea>
    </div>

    <div class="mb-3">        
        <label for="starts_at">Starts At</label>
          <!-- <div class="input-append date">
            <input type="text" class="datetime" id="starts_at"  name="starts_at" ><span class="add-on"><i class="icon-th"></i></span>
          </div> -->

          <div class="input-append date" data-date="2012-12-21T15:25:00Z">
            <input size="16" autocomplete="off" type="text" class="datetime" id="starts_at"  name="starts_at">
            <span class="add-on"><i class="icon-remove"></i></span>
            <span class="add-on"><i class="icon-th"></i></span>
        </div>
    </div>


    <div class="mb-3">        
        <label for="ends_at">Ends At</label>
          <!-- <div class="input-append date">
            <input type="text" class="datetime" id="ends_at"  name="ends_at" ><span class="add-on"><i class="icon-th"></i></span>
          </div> -->
          <div class="input-append date" data-date="2012-12-21T15:25:00Z">
            <input size="16" autocomplete="off" type="text" class="datetime" id="ends_at"  name="ends_at">
            <span class="add-on"><i class="icon-remove"></i></span>
            <span class="add-on"><i class="icon-th"></i></span>
        </div>
    </div>
       
    <div class="mb-3 form-check">
      <input type="checkbox" class="form-check-input" id="premium" name="premium" >
      <label class="form-check-label" for="premium">Premium</label>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  
  
<script>   

    // $('.input-append.date').datepicker({
    //     format: "dd/mm/yyyy",
    //     language: "pt-BR",
    //     autoclose: true,
    //     toggleActive: true
    // });

    $(".datetime").datetimepicker({        
        format: "dd/mm/yyyy - HH:ii" ,
        showMeridian: true,
        autoclose: true,
        todayBtn: true,
        language: 'pt-BR'        
    });
    
</script>

